<h1>Edit <%=@product.name %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :product_type %>
      <%= f.text_field :product_type , placeholder:'Wine of ... , jam of ....'%><br>


      <%= f.label :story %>
      <%= f.text_area :story ,  size: "100x10" %><br>

      <%= f.label :island %>
      <%= f.text_area :island , placeholder: 'Insert svg code'%><br>

      <%= f.label :island_name %>
      <%= f.text_field :island_name %><br>

      <%= f.label :info %>
      <%= f.text_area :info ,  size: "100x10" %><br>



      <%= f.label :image , 'Product Image' %>
      <%= f.file_field :image%><br>

      <%= f.label :cocktail_image  %>
      <%= f.file_field :cocktail_image%><br>

      <% if @product.image.attached? %>
            <%= f.label :remove_image %>
            <%= f.check_box :remove_image %><br>
      <% end %>

      <% if @product.cocktail_image.attached? %>
            <%= f.label :remove_cocktail_image %>
            <%= f.check_box :remove_cocktail_image %><br>
      <% end %>

      <%= f.submit "Save Product Changes" %>
    <% end %>
  </div>
</div>
