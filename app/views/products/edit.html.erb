
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :story %>
      <%= f.text_area :story ,  size: "100x10" %><br>

      <%= f.label :island %>
      <%= f.file_field :island %><br>

      <%= f.label :info %>
      <%= f.text_area :info ,  size: "100x10" %><br>



      <%= f.label :image  %>
      <%= f.file_field :image%><br>


      <% if @product.image.attached? %>
            <%= f.label :remove_image %>
            <%= f.check_box :remove_image %><br>
      <% end %>

      <%= f.submit "Save Product Changes" %>
    <% end %>
  </div>
</div>
